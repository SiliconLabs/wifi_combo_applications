	hp_type = inputstr
	str2int val hp_type
	if val=0 then	 
	elseif val=1 then 	 
	elseif val=2 then 	 
	else
		goto error
	endif
	
	rx_no='0'
	rx_no='0'
	strcompare hp_type '2'
	if result !=0 then
		inputbox 'Enter Receive Tx Channel Number(0-78, same as entered in Transmit Rx channel number):' 'Tx Channel Number'
		tx_no = inputstr	
		str2int txval tx_no
		if txval>-1 then
		elseif txval<79 then 	 
		else 
			goto error
		endif
	
		inputbox 'Enter Receive Rx Channel Number(0-78, same as entered in Transmit Tx channel number):' 'Rx Channel Number'
		rx_no = inputstr
		str2int rxval rx_no
		if rxval>-1 then
		elseif rxval<79 then 	 
		else 
			goto error
		endif
	endif

	
	inputbox 'Enter Antenna Selection Type: '#10#13' 2 - ONBOARD_ANT_SEL '#10#13' 3 - EXT_ANT_SEL ' 'Indication'
	ant_type = inputstr
	str2int val ant_type
	if val=2 then	 
	elseif val=3 then 	 
	else
		goto error
	endif
	
	
	pll = '0' ;PLL_MODE0
	rf ='1'	;Internal_RF
	rc = '2' ;HP_Chain
	seed = '0'; receiver seed is 0
	
	inputbox 'Loopback Feature: '#10#13' 0 - Disable '#10#13' 1 - Enable' 'Indication'
	lb = inputstr
	str2int val lb
	if val=0 then
	elseif val=1 then 
	else
		goto error
	endif
	
	
	sendln 'at+rsibt_bredrreceive='switch','address','length','packet_type','bt_mode','rx_no','tx_no','ltype','seed','hp_type','ant_type','pll','rf','rc','lb''
	wait 'OK' 'ERROR'
	if result = 2 then
		goto error
	else
		messagebox 'BT Rx PER mode executed successfully.' ''
	endif

	while 1
		dispstr #10#13
		setdebug 0
		mpause 1000
		sendln 'at+rsibt_perstats'
		dispstr 'PER Stats:'#13#10 
		setdebug 2     ; output is in binary, so best to display in hex format
		wait '4F 4B' '45 52 52' '50 45 52' ; 'OK' or 'ERR' or 'PER'
		setdebug 0
		if result = 2 then
			goto error
		elseif result = 1 then
			flushrecv
			dispstr #10#13
		else
			continue
		endif
	endwhile  
endif

