TRUE = 1
FALSE = 0
message = 'This example demonstrates BT PER mode functionality'
messagebox message ''
send '|'
wait 'U'
sendln 'U'
mpause 200
sendln '1'
wait 'Loading Done'
message = 'Firmware Loading Done'
messagebox message ''
sendln 'at+rsi_opermode=327680,0,2147483648,2147483648,2150629376,1073741824'
wait 'OK' 'ERROR'
if result = 2 then
	goto error  
else
	messagebox 'Opermode Successful' ''
endif

inputbox 'Enter BT Classic Mode:'#10#13' 1 - Transmit '#10#13' 2 - Receive ' 'Indication'
Mode= inputstr
str2int val Mode
if val=1 then
elseif val=2 then 
else
	goto error
endif

strcompare Mode '1'
if result=0 then
	inputbox 'Enable PER mode:'#10#13' 1 - Yes '#10#13' 2 - No' 'Indication'
	switch = inputstr
	str2int val switch
	if val=1 then
	elseif val=2 then 
	else
		goto error
	endif
	
	
	inputbox 'Enter BT Device Address(6 bytes, e.g. 00-00-00-00-00-00):' 'Indication'
	address = inputstr
	

	inputbox 'Enter packet type:' 'Indication'
	packet_type = inputstr

	inputbox 'Enter BT Classic Mode: '#10#13' 1 - Basic Rate '#10#13' 2 - Enhanced Rate' 'Indication'
	bt_mode = inputstr
	

	inputbox 'Enter Link Type:'#10#13' 0 - sco '#10#13' 1 - acl '#10#13' 2 - esco' 'Indication'
	ltype = inputstr
	str2int val ltype
	if val=0 then	 
	elseif val=1 then 
	elseif val=2 then 	 
	else
		goto error
	endif

	
	inputbox 'Enter Frequency Hopping Type: '#10#13' 0 - No Hopping '#10#13' 1 - Fixed Hopping '#10#13' 2 - Random Hopping' 'Indication'
	hp_type = inputstr
	str2int val hp_type
	if val=0 then	 
	elseif val=1 then 	 
	elseif val=2 then 	 
	else
		goto error
	endif
	
	
	rx_no='0'
	tx_no='0'
	strcompare hp_type '2'
	if result !=0 then
	
		inputbox 'Enter Tx Channel Number(0-78):' 'Tx Channel Number'
		tx_no = inputstr	
		str2int txval tx_no
		if txval>-1 then
		elseif txval<79 then 	 
		else 
			goto error
		endif
	
		inputbox 'Enter Rx Channel Number(0-78):' 'Rx Channel Number'
		rx_no = inputstr
		str2int rxval rx_no
		if rxval>-1 then
		elseif rxval<79 then 	 
		else 
			goto error
		endif
	endif

	
	inputbox 'Enter Antenna Selection Type: '#10#13' 2 - ONBOARD_ANT_SEL '#10#13' 3 - EXT_ANT_SEL ' 'Indication'
	ant_type = inputstr
	str2int val ant_type
	if val=2 then	 
	elseif val=3 then 	 
	else
		goto error
	endif
	
	
	pll = '0' ;PLL_MODE0
	rf ='1'	;Internal_RF
	rc = '2' ;HP_Chain
	
	str2int val bt_mode
	if val=1 then
		inputbox 'Enter Packet Length(Basic Rate max length is 341):' 'Indication'
		length = inputstr
		str2int lenval length
		if lenval>-1 then
		elseif lenval<342 then
		else	
			goto error
		endif
	elseif val=2 then
		inputbox 'Enter Packet Length(Enhanced Rate max length is 1023):' 'Indication'
		length = inputstr
		str2int lenval length
		if lenval>-1 then
		elseif lenval<1024 then
		else	
			goto error
		endif
	else
		goto error
	endif
	
	inputbox 'Enter Payload Type:'#10#13' 0 - PRBS9 sequence 11111111100000111101... '#10#13' 1 - Repeated 11110000 '#10#13' 2 - Repeated 10101010 '#10#13' 3 - PRBS15 '#10#13' 4 - Repeated 11111111 '#10#13' 5 - Repeated 00000000 '#10#13' 6 - Repeated 00001111 '#10#13' 7 - Repeated 01010101 ' 'Indication'
	pt = inputstr
	str2int val pt
	if val>-1 then 
	else 
		goto error
	endif
	if val<8 then  
	else
		goto error
	endif
	
	inputbox 'Enter Tx Power Index (Range: [1,10] & 127): ' 'Indication'
	ti = inputstr
	str2int val ti
	if val = 127 then
	elseif val>-1 then
	elseif val<11 then 	 
	else 
		goto error
	endif


	inputbox 'Enter PER Mode: '#10#13' 0 - BURST_MODE '#10#13' 1 - CONTINUOUS_MODE '#10#13' 2 - CONTINUOUS_WAVE_MODE (CW_MODE)' 'Indication'
	tm = inputstr
	str2int val tm
	if val=0 then
	elseif val=1 then 
	elseif val=2 then 
	else
		goto error
	endif
	
	seed = '0'
	strcompare tm '2'
	if result=0 then
		seed = '5'
	endif
	
	no_pkt='0'
	
	sendln 'at+rsibt_bredrtransmit='switch','address','length','packet_type','bt_mode','rx_no','tx_no','ltype','seed','hp_type','ant_type','pll','rf','rc','pt','ti','tm',0,'no_pkt''
	
	wait 'OK' 'ERROR'
	if result = 2 then
		goto error
	else
		strcompare tm '2'
		if result = 0 then
			messagebox 'BT Tx PER Continuous Wave mode executed successfully.' ''
		endif
		
		strcompare tm '1'
		if result = 0 then
			messagebox 'BT Tx PER Continuous mode executed successfully.' ''
		endif
		
		strcompare tm '0'
		if result = 0 then
			messagebox 'BT Tx PER Burst mode executed successfully.' ''
		endif
	endif

	while 1
		dispstr #10#13
		setdebug 0
		mpause 1000
		sendln 'at+rsibt_perstats'
		dispstr 'PER Stats:'#13#10 
		setdebug 2     ; output is in binary, so best to display in hex format
		wait '4F 4B' '45 52 52' '50 45 52' ; 'OK' or 'ERR' or 'PER'
		setdebug 0
		if result = 2 then
			goto error
		elseif result = 1 then
			flushrecv
			dispstr #10#13
		else
			continue
		endif
	endwhile 
endif

strcompare Mode '2'
if result=0 then
	inputbox 'Enable PER mode: '#10#13' 1 - Yes '#10#13' 2 - No' 'Indication'
	switch = inputstr
	str2int val switch
	if val=1 then
	elseif val=2 then 
	else
		goto error
	endif
	
	
